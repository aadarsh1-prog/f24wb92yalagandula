extends layout

block content
  head
    title Books List
    link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css")
  body
    .container
      h1 Books List
      table.table
        thead
          tr
            th ID
            th Title
            th Author
        tbody
          each book in books
            tr
              td= book.id
              td= book.title
              td= book.author
              td
                button(onclick=`buy(${book.id})`) Buy
      script.
        function buy(index) {
          alert(`You purchased item ${index + 1}`);
        }
